# Backend Environment Variables

# App
APP_NAME=LLMlab
ENVIRONMENT=development
DEBUG=true

# Database (use one)
DATABASE_URL=postgresql://user:password@localhost:5432/llmlab
# OR Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key

# Auth
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Provider Rates (JSON)
# Format: {"openai": {"gpt-4": {"input": 0.03, "output": 0.06}}, ...}
PROVIDER_RATES={"openai": {"gpt-4": {"input": 0.03, "output": 0.06}, "gpt-3.5-turbo": {"input": 0.0005, "output": 0.0015}}, "anthropic": {"claude-3-opus": {"input": 0.015, "output": 0.075}}}

# Webhooks (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Frontend Environment Variables (in llmlab/frontend/.env.local)
# NEXT_PUBLIC_API_URL=http://localhost:8000
# NEXT_PUBLIC_APP_NAME=LLMlab
